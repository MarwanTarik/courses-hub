generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  email       String    @unique
  password    String
  phonenumber String    @unique
  address     String
  gender      Gender
  role_id     Int
  student     Students?
  role        Roles     @relation(fields: [role_id], references: [id])
}

model Students {
  userId         Int              @unique
  studentId      Int              @unique
  gpa            Decimal          @db.Decimal(2, 1)
  levelId        Int              @unique
  classRank      Int
  departmentId   Int              @unique
  level          Levels           @relation(fields: [levelId], references: [id])
  department     Departments      @relation(fields: [departmentId], references: [id])
  user           Users            @relation(fields: [userId], references: [id])
  studentCourses StudentCourses[]
}

model Roles {
  id    Int     @id @default(autoincrement())
  role  Role    @unique
  users Users[]
}

model Courses {
  id             Int              @id @default(autoincrement())
  name           String           @unique
  creditHours    Int
  codeId         Int              @unique
  departmentId   Int              @unique
  department     Departments      @relation(fields: [departmentId], references: [id])
  studentCourses StudentCourses[]
  code           CoursesCode      @relation(fields: [codeId], references: [id])
}

model CoursesCode {
  id     Int      @id @default(autoincrement())
  code   String   @unique
  course Courses?
}

model StudentCourses {
  studentId Int      @unique
  coursesId Int      @unique
  Students  Students @relation(fields: [studentId], references: [userId])
  Courses   Courses  @relation(fields: [coursesId], references: [id])
}

model Levels {
  id       Int        @id @default(autoincrement())
  level    Int        @unique
  students Students[]
}

model Departments {
  id         Int        @id @default(autoincrement())
  department String     @unique
  students   Students[]
  courses    Courses[]
}

enum Gender {
  male
  female
}

enum Role {
  student
  admin
  guest
}
